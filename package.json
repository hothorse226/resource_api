{
  "name": "resourceguruapp_api",
  "description": "resourceguruapp_api",
  "version": "0.0.1",
  "scripts": {
    "debug": "babel-node $NODE_DEBUG_OPTION server/index.js",
    "start": "babel-node server/index.js",
    "eslint": "eslint .",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register --require babel-polyfill --recursive --timeout 100000 $npm_package_config_tests",
    "coverage": "NODE_ENV=test nyc --reporter=text --reporter=text-summary npm test",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --ignore-pattern node_modules --fix",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "ajv": "^5.2.0",
    "babel-plugin-istanbul": "latest",
    "babel-plugin-transform-object-assign": "latest",
    "babel-plugin-transform-object-rest-spread": "latest",
    "babel-plugin-transform-runtime": "latest",
    "babel-preset-latest": "latest",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.10",
    "chalk": "^1.1.3",
    "express": "^4.15.3",
    "express-fileupload": "^1.1.3-alpha.1",
    "glob": "^7.1.2",
    "handlebars": "^4.1.2",
    "helmet": "^3.6.1",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "md5": "^2.2.1",
    "mongoose": "^5.9.9",
    "node-datetime": "^2.1.2",
    "nodemailer": "^4.7.0",
    "querystring": "^0.2.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "swagger-spec-express": "^2.0.7"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "chai": "^4.2.0",
    "eslint": "^4.1.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "sinon": "^7.3.0"
  },
  "nyc": {
    "include": [
      "app/modules/**.js",
      "src/library/**.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "check-coverage": true,
    "all": true,
    "lines": 100,
    "functions": 100,
    "branches": 85,
    "statements": 85
  }
}
